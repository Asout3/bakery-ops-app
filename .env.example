# Server
PORT=5000
NODE_ENV=development
JWT_SECRET=change-this-in-production

# Preferred: full connection string (Supabase/Render/Neon/local)
# DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/bakery_ops

# Local PG fallback (used when DATABASE_URL is not set)
PGHOST=127.0.0.1
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=bakery_ops

# Optional DB pool tuning
DB_CONNECTION_TIMEOUT_MS=4000
DB_IDLE_TIMEOUT_MS=30000

# Client
# VITE_API_URL=http://localhost:5000/api
