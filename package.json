{
  "name": "bakery-ops-app",
  "version": "1.0.0",
  "description": "A comprehensive role-based web application for bakery operations management",
  "main": "server/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "NODE_ENV=production node server/index.js",
    "start:dev": "NODE_ENV=development node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "setup-db": "node scripts/setup-database.js",
    "test": "NODE_ENV=test node --test server/**/*.test.js",
    "test:coverage": "NODE_ENV=test node --test --experimental-test-coverage server/**/*.test.js",
    "lint": "eslint server/",
    "lint:fix": "eslint server/ --fix",
    "validate:env": "node -e \"require('./server/middleware/security.js').validateEnvironment()\"",
    "healthcheck": "node -e \"fetch('http://localhost:5000/api/health').then(r=>r.json()).then(console.log).catch(console.error)\"",
    "clean": "rm -rf node_modules client/node_modules client/dist",
    "docker:build": "docker build -t bakery-ops-app .",
    "docker:run": "docker run -p 5000:5000 --env-file .env bakery-ops-app",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "bakery",
    "inventory",
    "pos",
    "business",
    "operations",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "nodemon": "^3.0.2"
  }
}
